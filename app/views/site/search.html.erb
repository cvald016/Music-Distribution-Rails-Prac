<h1>Music Distribution</h1>

<%= form_tag site_search_path do %>
  <%= search_field_tag :term %>
  <%= submit_tag "Go!" %>
<% end %>

<% if @results.empty? %>
  Try your search again.
<% else %>
  <% @results.each do |result| %>
    <p><%= result.name  %></p>
  <% end %>
<% end %>

<%= link_to result.name, result  %>
